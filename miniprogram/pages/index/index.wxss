.out {
  background: pink;
  width: 500rpx;
  height: 500rpx;
}

.out .box {
  width: 350rpx;
  height: 350rpx;
  background-color: orange;
}

.out .box .inner {
  width: 280rpx;
  height: 280rpx;
  background-color: orchid;
}

.out .box .inner text {
  font-size: 40rpx;
  color: palegoldenrod;
}

.out .row {
  border: 3px solid green;
  width: 380rpx;
  height: 10rpx;
}

.banner {
  padding-top: 20rpx;
}

.banner .banner_swiper {
  height: 460rpx;
}

.banner .banner_swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav {
  padding: 60rpx 30rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  padding: 00rpx 25rpx;
  text-align: center;
  display: inline-block;
}

.scrollNav scroll-view .item .pic {
  width: 105rpx;
  height: 105rpx;
}

.scrollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.scrollNav scroll-view .item .text {
  font-size: 32rpx;
  color: var(--globalColor);
  padding-top: 10rpx;
}

.scrollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scrollNav scroll-view .item:last-child {
  padding-left: 0;
}

.about {
  padding: 50rpx 30rpx 80rpx;
  background: url(https://mp-94ef3a03-1d21-4f56-bd29-67fea9d262b3.cdn.bspapp.com/cloudstorage/86ab765f-2401-48b8-90ad-036675647cc9.png) no-repeat;
  background-size: cover;
}

.about .content .row {
  line-height: 1.7em;
  text-indent: 2em;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx dashed var(--themeColor);
}

.news {
  padding: 50rpx 30rpx;
}
